<% if current_user %>
  <p> Usuário logado com email: <%= current_user.email %> </p>
  <%= link_to "Deslogar!", destroy_user_session_path, 'data-turbo-method': :delete %> <br/>
<% else %>
  <%= link_to "Cadastrar!", new_user_registration_path %> <br/>
  <%= link_to "Logar!", new_user_session_path %> <br/>
<% end %>

<h1> Rotinas</h1>

<% @routines.each do |routine| %>
  <div class = "container__routines-exercises">
    <span class="text__routines"> <%= routine.name %> </span>
    <div class="container__exercises">
      <% if routine.exercises.size.zero? %>
        <span> Nao ha exercicios cadastrados para essa rotina! </span>
      <% else %>
        <% routine.exercises.each do |exercise| %>
          <span class="text__routines-exercises"> Exercício: <%= exercise.description %> - </span>
          <span class="text__routines-exercises"> Intensidade:  <%= exercise.intensity %> </span> <br/> 
        <% end %>
      <% end %>
    </div>
  </div>

<% end %>

<%= link_to "Criar nova Rotina", new_routine_path %> <br/>
<%= link_to "Criar novo Exercicio", new_exercise_path %> <br/>
